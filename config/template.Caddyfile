${lang}.${domain} {
    redir {
        if {uri} is /
        /wiki/${main_page}
    }

    proxy / https://${lang}.wikipedia.org
    import config.d/log.Caddyfile
}

${lang}.m.${domain} {
    redir {
        if {uri} is /
        /wiki/${main_page}
    }

    proxy / https://${lang}.m.wikipedia.org
    import config.d/log.Caddyfile
}

